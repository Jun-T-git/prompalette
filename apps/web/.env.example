# PromPalette Web Application Environment Variables Example
# Copy this file to .env.local and fill in your values

# =============================================================================
# REQUIRED CONFIGURATION
# =============================================================================

# Application Environment
NODE_ENV=development  # development | production | test
NEXT_PUBLIC_APP_URL=http://localhost:3000

# Supabase Configuration
# Option 1: Local Development (Recommended for development)
NEXT_PUBLIC_USE_LOCAL_SUPABASE=true  # Set to true to use local Supabase

# Option 2: Cloud Supabase (Required for production)
# If NEXT_PUBLIC_USE_LOCAL_SUPABASE is false or not set, ALL of these are required:
NEXT_PUBLIC_SUPABASE_URL=https://your-project.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your-anon-key
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key

# NextAuth Configuration
NEXTAUTH_URL=http://localhost:3000
NEXTAUTH_SECRET=your-secret-key-here

# GitHub OAuth
# Get these from https://github.com/settings/developers
GITHUB_CLIENT_ID=your-github-client-id
GITHUB_CLIENT_SECRET=your-github-client-secret

# Google OAuth
# Get these from https://console.cloud.google.com
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret

# Database Configuration Mode
DATABASE_MODE=development

# CORS Configuration
CORS_ALLOWED_ORIGINS=http://localhost:3000

# GitHub Configuration
GITHUB_REPO_OWNER=Jun-T-git
GITHUB_REPO_NAME=prompalette
GITHUB_API_BASE_URL=https://api.github.com
GITHUB_USER_AGENT=PromPalette-Download-Service/1.0

# Site Configuration
NEXT_PUBLIC_SITE_NAME="PromPalette"
NEXT_PUBLIC_SITE_DESCRIPTION="A powerful prompt management tool for AI enthusiasts"
NEXT_PUBLIC_SITE_URL=https://prompalette.com

# Logging
LOG_LEVEL=info
LOG_FORMAT=json
LOG_OUTPUT=console

# =============================================================================
# DEVELOPMENT CONFIGURATION
# =============================================================================

# Development server port (Next.js default: 3000)
PORT=3000

# Enable/disable development features
NEXT_PUBLIC_DEV_MODE=true

# Hot reload configuration
FAST_REFRESH=true

# TypeScript configuration
TYPESCRIPT_STRICT_MODE=true

# =============================================================================
# PRODUCTION OPTIMIZATIONS
# =============================================================================

# Bundle analyzer (set to true to analyze bundle size)
ANALYZE_BUNDLE=false

# Image optimization
NEXT_IMAGES_LOADER=default
NEXT_IMAGES_DOMAINS=github.com,raw.githubusercontent.com

# =============================================================================
# DEPLOYMENT CONFIGURATION
# =============================================================================

# Build output configuration
# NEXT_OUTPUT=standalone

# Static export (if using)
# NEXT_EXPORT=false

# Asset prefix (for CDN)
# ASSET_PREFIX=https://cdn.example.com

# =============================================================================
# THIRD-PARTY SERVICES (Optional)
# =============================================================================

# Email service (if implementing contact forms, notifications)
# SMTP_HOST=smtp.gmail.com
# SMTP_PORT=587
# SMTP_USER=your-email@gmail.com
# SMTP_PASS=your-app-password

# Cloud storage (if implementing file uploads)
# AWS_ACCESS_KEY_ID=your-access-key
# AWS_SECRET_ACCESS_KEY=your-secret-key
# AWS_REGION=us-east-1
# AWS_S3_BUCKET=prompalette-uploads
