# PromPalette Web Application Environment Variables
# Copy this file to .env.local and fill in your values

# =============================================================================
# NEXT.JS CONFIGURATION
# =============================================================================

# Environment mode
NODE_ENV=development

# Application URL (used for redirects and absolute URLs)
NEXT_PUBLIC_APP_URL=http://localhost:3000

# =============================================================================
# CORS CONFIGURATION
# =============================================================================

# Allowed origins for CORS requests (comma-separated)
# Development: Automatically includes localhost origins
# Production: REQUIRED - specify your production domains
CORS_ALLOWED_ORIGINS=https://prompalette.com,https://www.prompalette.com

# Examples:
# Single domain: CORS_ALLOWED_ORIGINS=https://prompalette.com
# Multiple domains: CORS_ALLOWED_ORIGINS=https://prompalette.com,https://www.prompalette.com,https://app.prompalette.com
# Local development: CORS_ALLOWED_ORIGINS=http://localhost:3000,http://localhost:5173

# =============================================================================
# API CONFIGURATION
# =============================================================================

# Internal API base URL (for server-side requests)
API_BASE_URL=http://localhost:8080

# Public API base URL (for client-side requests)
NEXT_PUBLIC_API_BASE_URL=http://localhost:8080

# API Authentication (if required)
# API_KEY=your-api-key-here

# =============================================================================
# DOWNLOAD SERVICE CONFIGURATION
# =============================================================================

# GitHub repository for release downloads
GITHUB_REPO_OWNER=Jun-T-git
GITHUB_REPO_NAME=prompalette

# GitHub API configuration
GITHUB_API_BASE_URL=https://api.github.com

# User-Agent for GitHub API requests
GITHUB_USER_AGENT=PromPalette-Download-Service/1.0

# =============================================================================
# ANALYTICS & MONITORING (Optional)
# =============================================================================

# Google Analytics (if using)
# NEXT_PUBLIC_GA_MEASUREMENT_ID=G-XXXXXXXXXX

# Sentry (if using)
# NEXT_PUBLIC_SENTRY_DSN=https://your-sentry-dsn-here

# Vercel Analytics (if using)
# NEXT_PUBLIC_VERCEL_ANALYTICS=true

# =============================================================================
# SEO & META CONFIGURATION
# =============================================================================

# Site metadata
NEXT_PUBLIC_SITE_NAME="PromPalette"
NEXT_PUBLIC_SITE_DESCRIPTION="A powerful prompt management tool for AI enthusiasts"
NEXT_PUBLIC_SITE_URL=https://prompalette.com

# Social media images
NEXT_PUBLIC_OG_IMAGE=/images/og-image.png
NEXT_PUBLIC_TWITTER_IMAGE=/images/twitter-image.png

# =============================================================================
# SECURITY CONFIGURATION
# =============================================================================

# Content Security Policy (CSP) nonce (if using)
# CSP_NONCE=auto-generated-in-production

# Rate limiting (if implemented)
# RATE_LIMIT_WINDOW_MS=900000
# RATE_LIMIT_MAX_REQUESTS=100

# =============================================================================
# LOGGING CONFIGURATION
# =============================================================================

# Log level (error, warn, info, debug)
LOG_LEVEL=info

# Structured logging format (json, text)
LOG_FORMAT=json

# Log output destination (console, file, both)
LOG_OUTPUT=console

# =============================================================================
# DEVELOPMENT CONFIGURATION
# =============================================================================

# Development server port (Next.js default: 3000)
PORT=3000

# Enable/disable development features
NEXT_PUBLIC_DEV_MODE=true

# Hot reload configuration
FAST_REFRESH=true

# TypeScript configuration
TYPESCRIPT_STRICT_MODE=true

# =============================================================================
# PRODUCTION OPTIMIZATIONS
# =============================================================================

# Bundle analyzer (set to true to analyze bundle size)
ANALYZE_BUNDLE=false

# Image optimization
NEXT_IMAGES_LOADER=default
NEXT_IMAGES_DOMAINS=github.com,raw.githubusercontent.com

# =============================================================================
# DEPLOYMENT CONFIGURATION
# =============================================================================

# Build output configuration
# NEXT_OUTPUT=standalone

# Static export (if using)
# NEXT_EXPORT=false

# Asset prefix (for CDN)
# ASSET_PREFIX=https://cdn.example.com

# =============================================================================
# DATABASE CONFIGURATION - SUPABASE
# =============================================================================

# Database Mode (REQUIRED)
# Options: 'development' | 'production' | 'test'
# - development: Allows mock fallback, shows helpful warnings
# - production: Requires real database, fails fast if missing
# - test: Always uses mock client for testing
DATABASE_MODE=development

# Supabase Configuration (REQUIRED for real database functionality)
# Get these values from your Supabase project dashboard
# NOTE: Only ANON_KEY should use NEXT_PUBLIC_ prefix (safe for client-side)
NEXT_PUBLIC_SUPABASE_URL=https://your-project-id.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your-anon-key-here

# Supabase Service Role Key (SERVER-SIDE ONLY - DO NOT expose to client)
# Used for admin operations, schema migrations, RLS bypass
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key-here

# Legacy database configuration (if migrating from other databases)
# DATABASE_URL=postgresql://username:password@localhost:5432/prompalette
# REDIS_URL=redis://localhost:6379

# =============================================================================
# THIRD-PARTY SERVICES (Optional)
# =============================================================================

# Email service (if implementing contact forms, notifications)
# SMTP_HOST=smtp.gmail.com
# SMTP_PORT=587
# SMTP_USER=your-email@gmail.com
# SMTP_PASS=your-app-password

# Cloud storage (if implementing file uploads)
# AWS_ACCESS_KEY_ID=your-access-key
# AWS_SECRET_ACCESS_KEY=your-secret-key
# AWS_REGION=us-east-1
# AWS_S3_BUCKET=prompalette-uploads