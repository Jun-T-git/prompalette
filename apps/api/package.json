    "pino": "^8.17.2"
  },
  "devDependencies": {
    "@types/node": "^20.11.5",
    "pino-pretty": "^10.3.1",
    "tsup": "^8.0.1",
    "tsx": "^4.7.0",
    "typescript": "^5.3.3",
    "vitest": "^1.2.0"
  },
  "engines": {
    "node": ">=18",
    "pnpm": ">=8"
  }
}