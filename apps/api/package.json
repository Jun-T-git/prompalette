{
  "name": "@prompalette/api",
  "version": "0.0.1",
  "private": true,
  "description": "PromPalette API Server - Hono REST API",
  "license": "MIT",
  "type": "module",
  "scripts": {
    "dev": "tsx watch src/index.ts",
    "build": "tsup",
    "start": "node dist/index.js",
